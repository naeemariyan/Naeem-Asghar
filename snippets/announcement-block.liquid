{% if block != blank %}
  {% style %}
    {% if block.settings.bg_color != black %}
    .section-wrapper-{{ block.id }} {
        background-color: {{block.settings.bg_color}};
    }
    {% endif %}
    {% if block.settings.text_color != black %}
    .section-wrapper-{{ block.id }} p{
        color: {{block.settings.text_color}};
    }
    {% endif %}
  {% endstyle %}
  
  <div class="section-wrapper announcement-section section-wrapper-{{ block.id }}">
    <div class="container">
      <div class="flex-row justify-content-between align-items-center">
        <div class="col-lg-3 col col-md-12">
          <div class="flex-row d-md-block m-md-0">
            <div class="col-xs-3 col-md-hidden"></div>
            <div class="col-xs-6 p-md-0">
              <a href="javascript:void(0)" class="d-block">
                <img width="152" height="auto" src="{{ block.settings.image | img_url: "master" }}" alt="{{ block.settings.title | escape }}" />
              </a>
            </div>
          </div>
        </div>
        <div class="col-lg-9 col col-md-12">
          <div class="flex-row">
            <div class="col col-md-8 text-center">
              <p class="fs-5 m-0">{{ block.settings.title }}</p>
            </div>
            <div class="col col-md-4 text-right">
              <a class="btn {{ block.settings.btn_style }}" href="block.settings.btn_url">{{ block.settings.btn_text }}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}